<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="2"
    android:orientation="vertical"
    android:background="@drawable/berandaprofil"
    tools:context=".P_ifdali">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_weight="1.7"
        android:weightSum="2"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:gravity="center"
            android:layout_weight="1.6"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/backpa"
                android:layout_marginLeft="15dp"
                android:layout_marginBottom="20dp"
                android:layout_gravity="bottom"
                android:background="@drawable/btback"
                android:layout_width="25dp"
                android:layout_height="25dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_weight="0.4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>



    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:weightSum="2"
        android:layout_weight="0.3"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

         <LinearLayout
             android:orientation="vertical"
             android:weightSum="2"
        android:layout_weight="1.3"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

             <LinearLayout
                 android:paddingBottom="10dp"
                 android:gravity="center"
                 android:layout_weight="0.5"
                 android:layout_width="match_parent"
                 android:layout_height="match_parent">

                 <ImageView
                     android:background="@drawable/pica"
                     android:layout_width="150dp"
                     android:layout_height="150dp"/>

             </LinearLayout>

             <LinearLayout

                 android:layout_weight="1.5"
                 android:layout_width="match_parent"
                 android:layout_height="match_parent">

                 <TextView

                     android:textSize="25dp"
                     android:gravity="center"
                     android:textStyle="bold"
                     android:textColor="#ffffff"
                     android:text="Ahsani Fauzan, SE"
                     android:layout_width="match_parent"
                     android:layout_height="match_parent"/>


             </LinearLayout>


         </LinearLayout>

        <LinearLayout
            android:weightSum="1"
            android:layout_gravity="center"
            android:layout_weight="0.7"
            android:layout_width="350dp"
            android:layout_height="match_parent">

            <LinearLayout
                android:paddingTop="20dp"
                android:orientation="vertical"
                android:weightSum="3"
                android:gravity="center"
                android:layout_weight="1"
                android:background="@drawable/profildata"
                android:layout_width="350dp"
                android:layout_height="match_parent">

                <LinearLayout
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:layout_weight="1.15"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                    <LinearLayout
                        android:gravity="center"
                        android:layout_weight="1.6"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:layout_marginLeft="50dp"
                            android:background="@drawable/icttl"
                            android:layout_width="20dp"
                            android:layout_height="20dp"/>

                    </LinearLayout>

                    <LinearLayout
                        android:paddingTop="30dp"
                        android:layout_weight="0.4"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:layout_marginLeft="25dp"
                            android:layout_gravity="center"
                            android:background="@drawable/ttla"
                            android:layout_width="190dp"
                            android:layout_height="66dp"/>


                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_weight="1.15"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                    <LinearLayout
                        android:gravity="center"
                        android:layout_weight="1.6"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:layout_marginLeft="50dp"
                            android:background="@drawable/icpartai"
                            android:layout_width="20dp"
                            android:layout_height="20dp"/>

                    </LinearLayout>

                    <LinearLayout
                        android:paddingTop="30dp"
                        android:layout_weight="0.4"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:layout_marginLeft="25dp"
                            android:layout_gravity="center"
                            android:background="@drawable/partaia"
                            android:layout_width="190dp"
                            android:layout_height="160dp"/>


                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:paddingBottom="110dp"
                    android:layout_weight="0.7"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                    <LinearLayout
                        android:gravity="center"
                        android:layout_weight="1.6"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:layout_marginBottom="10dp"
                            android:layout_marginLeft="50dp"
                            android:background="@drawable/icdaerah"
                            android:layout_width="20dp"
                            android:layout_height="20dp"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_weight="0.4"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:layout_marginLeft="25dp"
                            android:layout_gravity="center"
                            android:background="@drawable/pdaeraha"
                            android:layout_width="190dp"
                            android:layout_height="160dp"/>


                    </LinearLayout>

                </LinearLayout>






                </LinearLayout>




            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

