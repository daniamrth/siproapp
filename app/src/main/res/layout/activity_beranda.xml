<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="3"
    android:orientation="vertical"
    android:background="@drawable/lay_beranda5"
    tools:context=".Beranda">



    <LinearLayout
        android:paddingRight="15dp"
        android:paddingTop="15dp"
        android:gravity="right"
        android:layout_weight="1.35"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:background="@drawable/keluar"
            android:id="@+id/logout"
            android:layout_width="41dp"
            android:layout_height="48dp">

        </Button>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:weightSum="3"
        android:layout_weight="0.3"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:layout_weight="0.95"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:background="@drawable/logodprd"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginBottom="25dp"/>

            <TextView
                android:layout_marginBottom="5dp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:text="Dewan Perwakilan Rakyat Daerah"
                android:textSize="18dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:text="Kabupaten Balangan"
                android:textSize="18dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:paddingTop="45dp"
            android:layout_weight="1.1"
            android:weightSum="2"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:gravity="right"
                android:layout_marginRight="20dp"
                android:layout_marginTop="8dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:background="@drawable/bt_dewan_new2"
                    android:id="@+id/data"
                    android:layout_width="115dp"
                    android:layout_height="115dp"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="8dp"
                android:layout_marginLeft="20dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:background="@drawable/bt_jadwal_new2"
                    android:id="@+id/jadwal"
                    android:layout_width="115dp"
                    android:layout_height="115dp" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:paddingTop="45dp"
            android:weightSum="2"
            android:layout_weight="0.95"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:gravity="right"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:background="@drawable/bt_presensi_new2"
                    android:id="@+id/presensi"
                    android:layout_width="115dp"
                    android:layout_height="115dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:background="@drawable/bt_kehadiran_new2"
                    android:id="@+id/kehadiran"
                    android:layout_width="115dp"
                    android:layout_height="115dp" />

            </LinearLayout>



        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:weightSum="2"
        android:background="#8ED2BF"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_weight="1.35"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

   <LinearLayout
       android:background="#8ED2BF"
        android:layout_weight="1.5"
       android:layout_width="match_parent"
       android:layout_height="match_parent"/>

        <LinearLayout
            android:orientation="vertical"
            android:gravity="center"
            android:background="#01796F"
            android:layout_weight="0.5"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:textColor="#FFFFFF"
                android:text="Sekertariat DPRD Kabupaten Balangan"
                android:textSize="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:textColor="#FFFFFF"
                android:text=" Kantor : JL. Akhmad Yani Km 2,5 Paringin Kode Pos 71462 "
                android:textSize="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:textColor="#FFFFFF"
                android:text="Fax (0526 ) 2028479, Telp. 2028700, 2028435"
                android:textSize="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


        </LinearLayout>


    </LinearLayout>


</LinearLayout>